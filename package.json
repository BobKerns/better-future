{
  "name": "better-future",
  "version": "0.1.0",
  "description": "Better defered computation",
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/umd/index.js",
  "jsdelivr": "lib/umd/index.js",
  "unpkg": "lib/umd/index.js",
  "types": "lib/esm/index.d.ts",
  "scripts": {
    "pretest": "esbuild  ./src/__tests__/*.ts --format=esm --platform=node --target=es2019 --bundle --outdir=build/src/__tests__/tests.cjs && esbuild ./config/top-jest.config.ts --bundle --format=esm --sourcemap --target=esnext --outfile=build/config/top-jest.config.js",
    "test": "jest",
    "build": "esbuild ./src/index.js --bundle --platform=node --target=es2019 --outfile=lib/cjs/index.jsdelivr && esbuild ./src/index.js --bundle --platform=browser --target=es2019 --outfile=lib/umd/index.js && esbuild ./src/index.js --bundle --platform=neutral --target=es2019 --outfile=lib/esm/index.js",
    "postbuild": "npm run build:docs",
    "clean": "rm -rf build lib docs",
    "prepublishOnly": "NODE_ENV=production npm run build",
    "prebuild:docs": "npm install",
    "build:docs": "GRAPHVIZ_DOT=\"$(which dot)\" typedoc --out build/docs/api src/",
    "serve": "NODE_ENV=development SERVE=true serve",
    "predocs": "npm run build:config && npm run build:docs",
    "docs": "NODE_ENV=development SERVE=true SERVE_DOC=true serve",
    "prewatch": "npm run build:devtools"
  },
  "bin": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BobKerns/better-future.git"
  },
  "keywords": [
    "node",
    "typescript",
    "future",
    "deferred",
    "lazy"
  ],
  "author": "Bob Kerns",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BobKerns/better-future/issues"
  },
  "homepage": "https://github.com/BobKerns/better-future#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/mime": "^3.0.1",
    "jest": "^29.4.3",
    "jest-mock-proxy": "^3.1.2",
    "mermaid": "^10.0.0",
    "serve": "^14.2.0",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.23.26",
    "typedoc-plugin-mermaid": "^1.9.0",
    "typescript": "^4.9.5",
    "wcsize": "^1.0.0",
    "@jest/reporters": "^29.4.3",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/istanbul-reports": "^3.0.1",
    "esbuild": "0.17.10",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.1.5"
  },
  "dependencies": {
  }
}
