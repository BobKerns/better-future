{
  "name": "better-future",
  "version": "0.1.0",
  "description": "Better defered computation",
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/umd/index.js",
  "jsdelivr": "lib/umd/index.js",
  "unpkg": "lib/umd/index.js",
  "types": "lib/esm/index.d.ts",
  "scripts": {
    "prepare": "npm run build:svg & npm run build:config & join",
    "build:config": "esbuild ./config/top-jest.config.ts --bundle --format=esm --sourcemap --target=esnext --outfile=build/config/top-jest.config.js",
    "pretest": "esbuild  ./src/__tests__/*.ts --format=esm --platform=node --target=es2019 --bundle --outdir=build/src/__tests__/tests.cjs",
    "test": "jest",
    "build": "esbuild ./src/index.js --bundle --platform=node --target=es2019 --outfile=lib/cjs/index.jsdelivr && esbuild ./src/index.js --bundle --platform=browser --target=es2019 --outfile=lib/umd/index.js && esbuild ./src/index.js --bundle --platform=neutral --target=es2019 --outfile=lib/esm/index.js",
    "postbuild": "npm run build:docs",
    "clean": "rm -rf build lib docs",
    "prepublishOnly": "NODE_ENV=production npm run build",
    "build:svg": "mkdir -p build/docs/api && ([ -e build/docs/api/images ] || ln -s build/docs/images build/docs/api/images) && for f in src/images/*.mmd; do devtools/atomic convert add \"$f\" & done; wait",
    "build:md": "for $f i README.md; do devtools/atomic convert add \"$f\" & done; wait",
    "build:docs": "GRAPHVIZ_DOT=\"$(which dot)\" typedoc ${OPTIONS} --out build/docs/api src/",
    "postbuild:docs": "npm run build:svg && npm run build:md",
    "serve": "NODE_ENV=development SERVE=true serve",
    "predocs": "npm run build:docs && for $f in README.md src/images/*.mmd; do devtools/atomic convert check \"$f\" & done; wait",
    "docs": "npm run watch:docs & npm run watch:misc & serve & wait",
    "watch:docs": "OPTIONS='--watch' npm run build:docs",
    "watch:misc": "chokidar \"src/images/*.mmd\"  README.md --silent -c \"devtools/convert {event} \\\"{path}\\\"\""
  },
  "bin": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BobKerns/better-future.git"
  },
  "keywords": [
    "node",
    "typescript",
    "future",
    "deferred",
    "lazy"
  ],
  "author": "Bob Kerns",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BobKerns/better-future/issues"
  },
  "homepage": "https://github.com/BobKerns/better-future#readme",
  "devDependencies": {
    "@jest/reporters": "^29.5.0",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/istanbul-reports": "^3.0.1",
    "@types/jest": "^29.4.0",
    "@types/mime": "^3.0.1",
    "chokidar-cli": "3.0.0",
    "esbuild": "^0.17.11",
    "jest": "^29.5.0",
    "jest-mock-proxy": "^3.1.2",
    "mermaid": "^10.0.2",
    "@mermaid-js/mermaid-cli": "^10.0.2",
    "serve": "^14.2.0",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.23.26",
    "typedoc-plugin-mermaid": "^1.10.0",
    "typescript": "^4.9.5",
    "wcsize": "^1.0.0"
  },
  "dependencies": {
  }
}
